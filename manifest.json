{
  "manifest_version": 3,
  "name": "MISL Tools",
  "version": "1.1",
  "description": "A Chrome extension for MISL Tools and Shortcuts.",
  "options_ui": {
    "page": "options-ui/options.html",
    "open_in_tab": true
  },
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "tabs",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["tinymce/*","scripts/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Alt+Shift+M",
                "mac": "MacCtrl+Command+M"
            }
        }
    }
}
